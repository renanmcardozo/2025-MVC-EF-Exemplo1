@model MVC_EF.Exemplo1.Models.Autor

@{
    ViewData["Title"] = "Excluir Autor";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza de que deseja excluir este autor?</h3>
<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.AutorNome</dd>

        <dt class="col-sm-2">Data de Nascimento:</dt>
        <dd class="col-sm-10">@Model.AutorDataNascimento?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.AutorEmail</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AutorID" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>